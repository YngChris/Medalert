# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/medalert

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000





EXPO_PUBLIC_BASE_URL=http://localhost:3001/api

EXPO_PUBLIC_BASE_URL=https://medalertapi.onrender.com
# Google OAuth Configuration for MedAlert
# Copy this file to .env and fill in your actual credentials

# Your Google OAuth 2.0 Client ID
# Get this from: https://console.developers.google.com/apis/credentials
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here

# Your Google OAuth 2.0 Client Secret
# Get this from: https://console.developers.google.com/apis/credentials
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# API Base URL (if you have a backend)
EXPO_PUBLIC_BASE_URL=https://your-api-domain.com

# Other environment variables can be added here
# EXPO_PUBLIC_APP_NAME=MedAlert
# EXPO_PUBLIC_APP_VERSION=1.0.0
